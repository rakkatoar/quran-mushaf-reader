{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ]
}